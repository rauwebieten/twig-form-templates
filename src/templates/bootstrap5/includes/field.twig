<div class="mb-3">
    {%- if label -%}
        <label for="{{- id -}}" class="form-label">
            {{- label -}}
            {% if not required %}
                <span class="small fst-italic text-muted">{{ tft_optional_label() }}</span>
            {% endif %}
        </label>
    {%- endif -%}
    <div class="uk-form-controls">
        {% block content %}
        {% endblock %}
        {%- if help -%}
            <div class="form-text">
                {{- help -}}
            </div>
        {%- endif -%}
        {%- if errors|length -%}
            <div class="invalid-feedback">
                {% for error in errors %}
                    {{ error }}<br>
                {% endfor %}
            </div>
        {%- endif -%}

    </div>
</div>